generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model UserToken {
  id           String   @id @default(uuid())
  sessionId    String   @unique
  accessToken  String
  refreshToken String?
  expiryDate   BigInt?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Expense {
  id          String   @id @default(uuid())
  amount      Float
  category    String
  description String?
  date        DateTime @default(now())
  userId      String   // Maps to sessionId for simplicity 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
